{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PORT",
        "HOST",
        "GEMINI_API_KEY",
        "NODE_ENV",
        "DATABASE_URL",
        "DO_SPACES_ENDPOINT",
        "DO_SPACES_REGION",
        "DO_SPACES_KEY",
        "DO_SPACES_SECRET",
        "DO_SPACES_BUCKET",
        "RABBITMQ_URL",
        "QUEUE_NAME",
        "WORKER_CONCURRENCY",
        "DO_SPACES_ENDPOINT",
        "DO_SPACES_REGION",
        "DO_SPACES_KEY",
        "DO_SPACES_SECRET",
        "DO_SPACES_BUCKET"
      ]
    }
  }
}