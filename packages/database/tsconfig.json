{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}