{
  "name": "smart-receipt",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "mobile:dev": "cd apps/mobile && flutter run",
    "mobile:build:android": "cd apps/mobile && flutter build apk",
    "mobile:build:ios": "cd apps/mobile && flutter build ios",
    "mobile:test": "cd apps/mobile && flutter test",
    "mobile:analyze": "cd apps/mobile && flutter analyze",
    "mobile:build:runner": "cd apps/mobile && flutter pub run build_runner build --delete-conflicting-outputs",
    "mobile:watch:runner": "cd apps/mobile && flutter pub run build_runner watch --delete-conflicting-outputs",
    "melos:bootstrap": "cd apps/mobile && melos bootstrap",
    "melos:get": "cd apps/mobile && melos get",
    "melos:analyze": "cd apps/mobile && melos analyze",
    "melos:test": "cd apps/mobile && melos test",
    "melos:clean": "cd apps/mobile && melos clean",
    "melos:format": "cd apps/mobile && melos format",
    "melos:build:runner": "cd apps/mobile && melos build:runner",
    "melos:watch:runner": "cd apps/mobile && melos watch:runner"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}