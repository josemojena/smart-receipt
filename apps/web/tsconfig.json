{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".server/**/*.ts",
        ".server/**/*.tsx",
        ".client/**/*.ts",
        ".client/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "build",
        "public/build"
    ]
}